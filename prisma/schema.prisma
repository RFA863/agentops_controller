generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  Pending
  Running
  Completed
  Failed
}

model Users {
  id          Int       @id @default(autoincrement())
  username    String    @unique @db.VarChar(100)
  password    String  
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  workflow Workflows[]

}

model Agents {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(100)
  model       String    @db.VarChar(100)
  prompt      String    @db.Text
  Temperature Decimal   @db.Decimal(3,1)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  workflow_step Workflows_Steps[]

}

model Workflows {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(100)
  description String? @db.Text
  user_id     Int
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  user                Users                 @relation(fields: [user_id], references: [id], onDelete: Cascade)
  workflow_step       Workflows_Steps[]
  workflow_execution  Workflow_Executions[]

}

model Workflows_Steps {
  id          Int       @id @default(autoincrement())
  step_order  Int
  workflow_id Int
  agent_id    Int
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  workflow        Workflows         @relation(fields: [workflow_id], references: [id], onDelete: Cascade)
  agent           Agents            @relation(fields: [agent_id], references: [id], onDelete: Cascade)
  execution_log   Execution_Logs[]

}

model Workflow_Executions {
  id            Int       @id @default(autoincrement())
  workflow_id   Int            
  status        Status    @default(Pending)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt 
 
  workflow        Workflows         @relation(fields: [workflow_id], references: [id], onDelete: Cascade)
  execution_log   Execution_Logs[]

}

model Execution_Logs {
  id            Int        @id @default(autoincrement())
  execution_id  Int       
  step_id       Int        
  status        Status     @default(Pending) 
  input_data    String     @db.Text
  output_data   String?    @db.Text 
  error_message String?    @db.Text
  created_at    DateTime   @default(now()) 
  updated_at    DateTime   @updatedAt 

  workflow_execution  Workflow_Executions   @relation(fields: [execution_id], references: [id], onDelete: Cascade)
  workflow_step       Workflows_Steps       @relation(fields: [step_id], references: [id], onDelete: Cascade)

}


